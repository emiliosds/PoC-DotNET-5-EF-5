@model IEnumerable<Usuario>
@{
    ViewData["Title"] = "Usuário";
}
<h1>@ViewData["Title"]</h1>

<div class="row mb-3">
    <div class="col-12">
        <a asp-action="Inserir" asp-controller="Usuario" class="btn btn-primary"><i class="fas fa-plus"></i> Inserir novo usuário</a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        @if (Model.Count() > 0)
        {
            <table class="table table-sm table-bordered table-striped table-hover" style="width: 100%;">
                <thead>
                    <tr>
                        <th scope="col" width="80%">Nome</th>
                        <th scope="col" width="20%" class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td width="80%">@item.Nome</td>
                            <td width="20%" class="text-center">
                                <a asp-action="Editar" asp-controller="Usuario" asp-route-Id="@item.Id" class="btn btn-link">Editar <i class="far fa-edit"></i></a> |
                                <a asp-action="Excluir" asp-controller="Usuario" asp-route-Id="@item.Id" class="btn btn-link">Excluir <i class="far fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Nenhum registro.</p>
        }
    </div>
</div>